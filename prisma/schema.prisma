generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role{
  Student
  Teacher
  Principal
  HOD
  Admin
}

enum Session{
  Morning
  Evening
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  phoneNo      String?
  address      String?
  dept         String?
  session      Session?  
  password     String
  created_at   DateTime   @default(now())
  role         Role
  batch        String?
  designation  String?
}


