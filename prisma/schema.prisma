generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Student
  Teacher
  Principal
  HOD
  Admin
}

enum Session {
  Morning
  Evening
}

model User {
  id           Int      @id @default(autoincrement())
  student_id   String?
  teacher_id   String?
  admin_id     String?
  hod_id       String?
  image        String   @default("")
  principal_id String?
  name         String
  email        String   @unique
  phoneNo      String?
  address      String?
  dept         String?
  session      Session?
  password     String
  created_at   DateTime @default(now())
  role         Role
  batch        String?
  semester     String?
  designation  String?
  post         Posts[]
}

model Posts {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  postedBy    Int
  tag         String
  postImage   String?
  user        User    @relation(fields: [postedBy], references: [id])
}
