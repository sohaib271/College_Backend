generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Student
  Teacher
  Principal
  HOD
  Admin
}

enum Session {
  Morning
  Evening
}

model User {
  id           Int        @id @default(autoincrement())
  student_id   String?
  teacher_id   String?
  admin_id     String?
  hod_id       String?
  image        String     @default("")
  principal_id String?
  name         String
  email        String     @unique
  phoneNo      String?
  address      String?
  dept         String?
  session      Session?
  password     String
  created_at   DateTime   @default(now())
  role         Role
  classs       String?
  batch        String?
  semester     String?
  designation  String?
  post         Posts[]
  likes        Likes[]
  comments     Comments[]
  reply        Reply[]
}

model Posts {
  id          Int        @id @default(autoincrement())
  title       String?
  description String?
  postedBy    Int
  tag         String?
  postImage   String[]
  video       String?
  file        String?
  createdAt   DateTime   @default(now())
  user        User       @relation(fields: [postedBy], references: [id])
  likes       Likes[]
  comments    Comments[]
}

model Likes {
  id        Int      @id @default(autoincrement())
  likedBy   Int
  postId    Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [likedBy], references: [id])
  post      Posts    @relation(fields: [postId], references: [id])
}

model Comments {
  id        Int     @id @default(autoincrement())
  commentBy Int
  postId    Int
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [commentBy], references: [id])
  post      Posts    @relation(fields: [postId], references: [id])
  reply     Reply[]
}

model Reply {
  id        Int      @id @default(autoincrement())
  repliedBy Int
  commentId Int
  createdAt DateTime @default(now())
  comment   Comments @relation(fields: [commentId], references: [id])
  user      User     @relation(fields: [repliedBy], references: [id])
}
